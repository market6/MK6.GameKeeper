<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <appSettings>
    <add key="Name" value="GameKeeper" />
    <add key="DisplayName" value="GameKeeper"/>
    <add key="Description" value="GameKepper"/>
    
    <!-- Folder that contains the plugins to run -->
    <add key="PluginDirectory" value="Plugins" />
    
    <!-- Milliseconds between watchdog checks for stopped threads -->
    <add key="WatchdogFrequency" value="1000"/>
  </appSettings>
</configuration>